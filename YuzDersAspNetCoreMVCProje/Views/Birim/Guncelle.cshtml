@model YuzDersAspNetCoreMVCProje.Models.Birim
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

@using (Html.BeginForm("GuncelleYap", "Birim", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col col-md-8">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <td>@Html.TextBoxFor(m => m.BirimID, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>Birim Adı</th>
                            <td>@Html.TextBoxFor(m => m.BirimAd, new { @class = "form-control" })</td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col col-md-6">
                <button id="btn1" class="btn btn-warning">Güncelle</button>
            </div>
            <script>
                $('#btn1').click(function () {
                    alert("Güncelleme işlemi başarıyla yapıldı.");
                });
            </script>
        </div>
    </div>
}