@model YuzDersAspNetCoreMVCProje.Models.Personel
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<form class="form-group" method="post">
    <div class="container">
        <div class="row">
            <div class="col col-md-8">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>Ad</th>
                        <td>@Html.TextBoxFor(m => m.PersonelAd, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <th>Soyad</th>
                        <td>@Html.TextBoxFor(m => m.PersonelSoyad, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <th>Şehir</th>
                        <td>@Html.TextBoxFor(m => m.PersonelSehir, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <th>Departman</th>
                        <td>@Html.DropDownListFor(m => m.Birim.BirimID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col col-md-6">
                <button class="btn btn-primary"  id="btn1">Kaydet</button>
            </div>          
        </div>
        <script>
            $('#btn1').click(function () {
                alert('Personel ekleme işlemi başarılı.');
            });
        </script>
    </div>
</form>